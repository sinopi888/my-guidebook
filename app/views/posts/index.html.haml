= render 'layouts/header'
.postsindex
  .side-bar
    = render 'render/sidebar'
    .container
      = image_tag "yellowcar.jpg", class: "yellowcar", width: "800px", height: "500px"
      .post-list
        - @posts.each do |post|
          %li
            = image_tag "#{post.image}", width: "700px", height: "400px"
            %br
          .post-list__image
            = link_to "#{post.title}", post_path(post.id)
            %br
          .post-list__name
            = post.user.nickname